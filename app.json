{
  "scripts": {
    "dokku": {
      "predeploy": "/app/scripts/django/predeploy.sh"
    }
  },
  "stack": "container",
  "environments": {
    "review": {
      "addons": ["heroku-postgresql:hobby-dev", "heroku-redis:hobby-dev"],
      "env": {
        "DJANGO_CONFIGURATION": "Production",
        "DJANGO_DEBUG": "False",
        "DJANGO_SECRET_KEY": "not-so-secret-in-review",
        "RUN_COLLECTSTATIC": "Yes",
        "RUN_GUNICORN": "Yes",
        "RUN_MIGRATIONS": "Yes",
        "RUN_QCLUSTER": "Yes",
        "SERVER_INSTANCE": "review"
      },
      "formation": {
        "web": {
          "quantity": 1,
          "size": "free"
        },
        "worker": {
          "quantity": 1,
          "size": "free"
        }
      },
      "scripts": {
        "postdeploy": "python manage.py migrate && python manage.py loaddata demodata"
      }
    }
  }
}
